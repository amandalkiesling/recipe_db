<div class="container">
<p id="notice"><%= notice %></p>

<h1>Recipes</h1>
<div class="row">
    <% @recipes.each do |recipe| %>
<div class="col-md-4">
    <div class="recipe-box">
      <% if recipe.image? %>
        <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
      <% end %>
        <ul>
          <li class="title-text"><%= recipe.title %></li>
          <li class="description-text"><%= recipe.description %></li>
          <li class="link-to-text"><%= link_to 'Show', recipe %> |
          <%= link_to 'Edit', edit_recipe_path(recipe) %> |
          <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
      </div><!--recipe-box-->
</div><!--col-md-4 ends here-->
    <% end %>

 </div><!--/row-->

<br>


</div>